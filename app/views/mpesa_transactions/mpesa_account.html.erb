<div class="container d-flex align-items-center justify-content-center">
  <div>
    <div class="container">
      <div class="card">
        <div class="card-header">
          Welcome <%= current_user.full_name %> to your Mpesa Account
        </div>
        <div class="card-body">
          <br/>
            <p>
              <strong>Your Account Balance:</strong>
              Ksh. <%= mpesa_account.available_balance %>
            </p>
        </div>
      </div>

      <br/>
      <div class="row">
        <div class="col-sm-6 mb-3 mb-sm-0">
          <div class="card text-center">
            <div class="card-body">
              <h5 class="card-title">Self deposit</h5>
                <%= link_to "Proceed", mpesa_transactions_top_up_path, class: "btn btn-primary"%>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card text-center">
            <div class="card-body">
              <h5 class="card-title">Send money</h5>
                <%= link_to "Proceed", contacts_path, class: "btn btn-primary"%>
            </div>
          </div>
        </div>
      </div>
      

    </div>
    </div>
    </div>