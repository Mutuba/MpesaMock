<div class="container d-flex align-items-center justify-content-center">
  <div class="upload-form">

    <%= form_for @mpesa_transaction, url: mpesa_transactions_deposit_path do |f| %>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Top Amount</label>
        <%= f.number_field :amount, autofocus: true, class: 'form-control' %>
      </div>
      <br/>
      <div class="actions">
        <%= f.button "Top Up", type: :submit, class: "btn btn-primary" %>
      </div>
  <% end %>
</div>
</div>